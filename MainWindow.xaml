<Window x:Class="TodoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:TodoList"
        mc:Ignorable="d"
        Title="TodoList" Height="795" Width="1060"
        ResizeMode="CanMinimize">
    <Grid>
        <DockPanel>
            <Menu DockPanel.Dock="Top" Loaded="Menu_Loaded">
                <MenuItem Header="ファイル(_F)">
                    <MenuItem Header="データを削除する" Click="MenuItem_Click"/>
                    <Separator />
                    <MenuItem Header="終了" Click="exit_click"/>
                </MenuItem>
                <MenuItem Header="編集(_O)">
                    <MenuItem Header="予定を追加" Click="add_sd"/>
                    <MenuItem Header="予定を削除" Click="delete_sd"/>
                    
                </MenuItem>
                


            </Menu>
        </DockPanel>


        <StackPanel>
            <Grid Margin="189,0,0,0" Height="766">
                <Line X1="0" Y1="43" X2="1055" Y2="43" Stroke="Black" StrokeThickness="0.1"  Margin="-188,0,0,0" />
                <Line X1="175" Y1="43" X2="175" Y2="770" Stroke="Black" StrokeThickness="0.2" Margin="-188,0,0,0" />
                <Label x:Name="label_complete" Content=""  FontSize="20" Margin="0,39,0,688"/>
                <Button x:Name="complete_button_name" Content="完了！" HorizontalAlignment="Left" Margin="724,44,0,0" VerticalAlignment="Top" Width="116" RenderTransformOrigin="0.49,-0.85" Height="34" Click="Complete_button_name_Click"/>
                <TextBox x:Name="textBox_title" TextWrapping="Wrap" Text="タイトル" Margin="0,83,10,607" FontSize="50"  MaxLength="24" LostFocus="Lost_Focus_textBox_title"/>
                <Label Content="日付を選択"  FontSize="20" Margin="0,201,719,523"/>
                <xctk:DateTimePicker x:Name="datetimePicker"  ValueChanged="DateTime_Change_contents" ShowButtonSpinner="False" Margin="0,248,589,498"/>
                <Label Content="詳細"  FontSize="20" Margin="0,316,0,412" HorizontalAlignment="Left" Width="66" RenderTransformOrigin="0.727,0.526"/>
                <TextBox x:Name="textBox" TextWrapping="Wrap" Text="詳細" Margin="0,359,10,51" FontSize="25" LostFocus="Lost_Focus_textBox"/>
                <Button x:Name="delete_button_name" Content="予定を削除" HorizontalAlignment="Left" Margin="0,720,0,0" VerticalAlignment="Top" Width="76" Click="delete_button" RenderTransformOrigin="0.5,-0.4"/>
                <Button x:Name="save_button_name" Content="変更を保存" HorizontalAlignment="Left" Margin="764,720,0,0" VerticalAlignment="Top" Width="76"  Click="save_button" RenderTransformOrigin="0.138,0.575"/>

            </Grid>
        </StackPanel>
        
            <StackPanel>
            <Grid Margin="0,0,875,0" Height="766">
                
                <Label x:Name="label" Content="ようこそ！" Margin="0,18,-875,716" RenderTransformOrigin="0.5,0.5"/>
                <Button x:Name="button" Content="新規作成" HorizontalAlignment="Left" Margin="0,44,0,0" VerticalAlignment="Top" Width="169" Height="25" Click="New_button"/>
                <DatePicker x:Name="date_picker" SelectedDateFormat="Short" HorizontalAlignment="Left" Margin="0,69,0,0" VerticalAlignment="Top" Width="169" SelectedDateChanged="Date_Change_todo"/>
                <CheckBox x:Name="check" Content="完了済みも表示" Margin="10,724,-10,24" IsChecked="True" Click="check_Click"/>
                <ComboBox x:Name="combo" Margin="0,93,10,650" IsDropDownOpen="True" DropDownClosed="Combo_SelectionChanged"/>
            </Grid>
        </StackPanel>

    </Grid>
</Window>
